@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewBag.Title = "AssignedProjectTicket";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ticketTable').DataTable();
        });
    </script>
}

    <h2>All tickets assigned to my projects</h2>

<p>
    @if (User.IsInRole("Submitter"))
    {
        @Html.ActionLink("Create New", "Create")
    }

</p>
<table id="ticketTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPriority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedToUser)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Created)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Updated)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerUser.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedToUser.FullName)
                </td>
                <td>
                    @if (User.IsInRole("ProjectManager"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @: |
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) @: |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) @: |*@
                    }
                    @if (User.IsInRole("ProjectManager"))
                    {
                        <a href="@Url.Action("AssignTickets", "Tickets", new { id = item.Id })">Assign Users</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

